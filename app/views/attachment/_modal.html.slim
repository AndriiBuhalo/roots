.modal-header
  h5.modal-title Add #{@attachment.original_filename} to album
  button.close aria-label="Close" data-dismiss="modal" type="button"
    span aria-hidden="true" Ã—
.modal-body
  = simple_form_for :attachmentRelation, { url: add_attachment_to_album_path }, remote: true  do |f|
    = f.hidden_field :attachmentId, :value => @attachment.id
    = f.input :album, collection: @albums.map { |name| name }
    button.btn.btn-primary type="submit" Save changes
