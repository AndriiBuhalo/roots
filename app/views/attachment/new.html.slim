= simple_form_for @attachment, url: { action: "create" } do |f|
  h1 = t('.create_file')
  = f.input :keyword, placeholder: t('attachment.keyword')
  = f.input :notes, placeholder: t('attachment.notes')
  = f.input :place, placeholder: t('attachment.place')
  = f.input :date, as: :date, html5: true
  .nested-fields
    .input-group.mb-3
      .custom-file
        = f.file_field :file, id: "inputFile", class: "custom-file-input"
        label.custom-file-label for="inputFile" = t('.add_file')
      .input-group-append
        .input-group-text
          = t('.upload')
    = f.submit t('common.add'), class: 'btn btn-success mt-3'
    = link_to t('common.back'), :back, class: 'btn btn-secondary mt-3 ml-3'
