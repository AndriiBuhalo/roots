= simple_form_for(@post) do |f|
  - if @post.errors.any?
    .alert.alert-danger role="alert"
      button.close data-dismiss="alert" &times;
      h2 = t('global.forms.messages.errors', count: @post.errors.count)
      ul
        - @post.errors.full_messages.each do |message|
          li = message


  .field.form-group
    = f.input :title, input_html: { class: 'form-control' }, error: false, placeholder: t('posts.form.title_placeholder')
  .field
    = f.input :content, input_html: { class:"form-control" }, error: false, placeholder: t('posts.form.content_placeholder')
  .actions = f.submit t('global.forms.submit'), class:"btn btn-primary"

